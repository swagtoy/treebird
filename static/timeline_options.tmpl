<div class="menubar">
  <form action="." method="post">
    {{ %s : only_media }}
    <input type="checkbox" name="only_media" value="1" {{ %s : only_media_active }}>
    -
    {{ %s : replies }}
    <select name="replies_only">
      <option value="0">Show replies</option>
